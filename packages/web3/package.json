{
  "name": "@endpass/web3",
  "version": "0.0.1",
  "description": "",
  "author": "Endpass, Inc",
  "license": "MIT",
  "main": "./web3-api.min.js",
  "module": "./web3-api.esm.js",
  "umd": "./web3-api.umd.js",
  "repository": "https://github.com/endpass/endpass-core/tree/master/packages/web3",
  "bugs": {
    "url": "https://github.com/endpass/endpass-core/issues"
  },
  "scripts": {
    "update": "yarn build && npm publish ./dist",
    "dev": "rollup -c -w",
    "dev:browser": "webpack --mode development -w",
    "build": "rimraf ./dist && npm run build:lib && npm run build:browser",
    "build:lib": "NODE_ENV=production rollup -c",
    "build:browser:dev": "rollup -c & webpack --mode development",
    "build:browser": "webpack --mode production",
    "build:dev": "NODE_ENV=development rollup -c",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest ./tests",
    "test:unit:watch": "jest ./tests --watch",
    "format": "yarn format:prettier && yarn format:eslint",
    "format:prettier": "prettier --write '**/*.{js,json}'",
    "format:eslint": "eslint --ext .json,.js,.ts src/ --fix",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "check-types": "tsc"
  },
  "lint-staged": {
    "./src/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branch": "release",
    "prepare": [
      {
        "path": "@semantic-release/changelog"
      },
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "config": {
    "repo": "https://github.com/endpass/endpass-auth.git",
    "commit": "HEAD",
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "typings": "./types",
  "dependencies": {
    "@endpass/utils": "^1.8.7",
    "jsonbird": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/parser": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@babel/runtime": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@endpass/eslint-plugin-endpass": "^0.2.9",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^7.0.18",
    "@types/node": "^12.12.14",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "copy-webpack-plugin": "^5.0.5",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.2",
    "fs-extra": "^8.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-localstorage-mock": "^2.4.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.3",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.8",
    "rollup-plugin-alias": "1.5.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-visualizer": "^3.3.0",
    "semantic-release": "^15.13.31",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
