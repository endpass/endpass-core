{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    // "checkJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "./types/**/*"],
  "exclude": ["node_modules"]
}
